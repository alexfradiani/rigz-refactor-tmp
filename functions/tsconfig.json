{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@app": ["app"],
      "@config": ["config/index"],
      "@controllers": ["controllers"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
    },
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
